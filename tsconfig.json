{
  "compilerOptions": {
    "paths": {
      "@src/*": ["./src/*"],
      "@database/*": ["./database/*"],
      "@queries-V1/*": ["./src/services/queries/v1/*"],
      "@controllers-V1/*": ["./src/controllers/v1/*"],
      "@routes-V1/*": ["./src/routes/v1/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"]
    },
    "target": "es2017",
    "noImplicitAny": false,
    "module": "Node16",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "resolveJsonModule": true
  }
}
