{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@emails/*": ["emails/*"],
      "@database/*": ["database/*"],
      "@queries-V1/*": ["src/v1/queries/*"],
      "@controllers-V1/*": ["src/v1/controllers/*"],
      "@routes-V1/*": ["src/v1/routes/*"],
      "@repositories-V1/*": ["src/v1/repositories/*"],
      "@services-V1/*": ["src/v1/services/*"],
      "@schemas-V1/*": ["src/v1/schemas/*"],
      "@middleware/*": ["src/middleware/*"],
      "@helpers/*": ["src/helpers/*"],
      "@utils/*": ["utils/*"],
      "@global-types/*": ["types/*"]
    },
    "target": "es2017",
    "noImplicitAny": false,
    "module": "Node16",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "resolveJsonModule": true
  }
}
