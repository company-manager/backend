{
  "compilerOptions": {
    "paths": {
      "@src/*": ["./src/*"],
      "@database/*": ["./database/*"],
      "@queries/*": ["./queries/*"],
      "@controllers/*": ["./controllers/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"],
      "@middleware/*": ["./middleware/*"]
    },
    "target": "es2017",
    "noImplicitAny": false,
    "module": "Node16",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "resolveJsonModule": true
  }
}
